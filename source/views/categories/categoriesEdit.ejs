<body>

    <%-include('../partials/header')%>

 <main>


      <h1 class="titulo">Editar una Categoria</h1>
    
      <form action="/categorias/edit/:id" method="POST">

<div>
   <label for=''>Nombre de Categoria</label>
    <input type="text" name="nombre" value="<%=category.name%>"> 
</div>
<div>
    <label for=''>ID de Categoria</label>
    <input type="text" name="id" value="<%=category.id%>"> 
</div>

<label for="">Categoria</label>
<select name="categoria">

<% for (let i =0; i < category.length; i ++) { %>

<% if (category[i].id == detalle.id) { %>
<option value="/categorias/edit/<%= category[i].id %>" selected>
    <%=category[i].name%>
</option>
<% } else { %>
    <option value="/categorias/edit/<%= category[i].id %>">
        <%=category[i].name%>
    </option>
<% } %>

<% } %>

</select>
<a href="/categorias/edit/<%=category.id%>">
<button type="submit">Guardar</button>
</a>
<form action="/categorias/delete/<%=category.id%>" method="DELETE">
<button type="submit">Borrar el Elemento</button>
</form>
<p> 
    <a class="botonVolver" href="/categorias">Cancelar</a>
 </p>
      </form>

</main>

</body>

